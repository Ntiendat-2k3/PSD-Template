mixin menuLink(title, href = "#")
     li.header-menu-item 
          a.header-menu-link(href= href)= title

mixin headerBottomItem(number, title)
     .header-bottom-item 
          span.header-bottom-number= number
          span.header-bottom-text= title 

mixin blockBox(caption, title, desc)
     .block-box
          h3.block-box-caption= caption 
          h2.block-box-heading= title 
          if desc 
               p.block-box-desc= desc
          
//- data  = {src: "", alt: "", icon: "", title: ""}
mixin aboutItem(data)
     .about-item 
          img.about-image(src= src, alt="image")
          .about-content 
               i.about-icon(class= iconClass)
               span.about-title= title 
               
mixin serviceItem(src, title, desc)
     .service-item 
          i(class= "fa fa-=src").service-item-icon 
          .service-item-info 
               h3.service-item-title= title
               p.service-item-desc= desc

mixin wedoItem(title, desc, active = "")
     .wedo-item(class= active)
          .wedo-item-header 
               i.fa.fa-cog.wedo-item-icon
               h3.wedo-item-title= title
               i.fa.fa-angle-down.wedo-item-arrow 
          .wedo-item-content 
               .wedo-item-text= desc

mixin teamSocial(facebook = "#", twitter = "#", pinterest = "#", instagram = "#")
     ul.team-social 
          li.team-social-item 
               a.team-social-link(href= facebook)
                    i.fab.fa-facebook-f 
          li.team-social-item 
               a.team-social-link(href= twitter)
                    i.fab.fa-twitter
          li.team-social-item 
               a.team-social-link(href= pinterest)
                    i.fab.fa-pinterest
          li.team-social-item 
               a.team-social-link(href= instagram)
                    i.fab.fa-instagram
mixin teamItem(src = "https://i.pinimg.com/564x/fe/aa/e0/feaae05ce42c84b2b3e2842295b6a3c8.jpg", name = "Christopher John", position = "Front-end Dev")
     .team-item     
          .team-main 
               img(src= src, alt="").team-image
               .team-content 
                    if block 
                         block 
          .team-info 
               h3.team-name= name
               span.team-position= position
